<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/button2"
    android:layout_weight="4"
    android:id="@+id/item">

    <ImageView
        android:id="@+id/Lock"
        android:layout_width="@dimen/size_back"
        android:layout_height="@dimen/size_back"
        android:layout_marginBottom="@dimen/margin_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_image"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_Lesson"
        android:textSize="@dimen/text_size_button"
        android:textColor="#f9ee2d"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/bt_hoc"
        android:layout_width="@dimen/widthbtnext"
        android:layout_height="@dimen/heigthbtnext"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/padding"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"
        android:text="HOC"/>

</LinearLayout>