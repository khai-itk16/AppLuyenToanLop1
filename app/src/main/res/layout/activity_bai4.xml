<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4">
    <RelativeLayout
        android:id="@+id/hang1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/color_diem"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:layout_width="@dimen/sizestar"
                android:layout_height="@dimen/sizestar"
                android:background="@drawable/sao" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/title_area"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bien">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/titlelesson4"
                android:textAlignment="center"
                android:textColor="@color/color_diem"
                android:textSize="@dimen/text_size_small" />


        </RelativeLayout>

        <Button
            android:id="@+id/nut_thoat"
            android:layout_width="@dimen/size_back"
            android:layout_height="@dimen/size_back"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginTop="@dimen/margin_button"
            android:background="@drawable/custombackbutton" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_button">

    </ListView>


</LinearLayout>